<%- include('top') %>
<div class="bg-light pt-5">
 <h1 class="text-center my-5">Report Missing Person</h1>  
 
  <% for(let i = 0; i < errors.length; i++) { %>
    <h5 class="text-center text-danger"> <%= errors[i] %> </h5>
  <% } %>    

  <form id="person-form" class="col-12 col-md-8 col-lg-6 mx-auto" action="/post-person" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="fname" class="form-label">First Name</label>
      <input type="text" required="true" class="form-control" id="fname" name="fname">
    </div>
    <div class="mb-3">
      <label for="lname" class="form-label">Last Name</label>
      <input type="text" required="true" class="form-control" id="lname" name="lname">
    </div>
    <div class="mb-3">
      <label for="gender" class="form-label">Gender</label>
      <select id="gender" required="true" name="gender" class="form-control">
        <option value="" disabled selected>Select Gender</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="dob" class="form-label">Date of Birth</label>
      <input type="date" required="true" class="form-control" id="dob" name="dob">
    </div>
    <div class="mb-3">
      <label for="hair" class="form-label">Hair Color</label>
      <select id="hair" required="true" name="hair" class="form-control">
        <option value="" disabled selected>Select Hair Color</option>
        <option value="Brown">Brown</option>
        <option value="Black">Black</option>
        <option value="Blonde">Blonde</option>
        <option value="Red">Red</option>
        <option value="Gray">Gray</option>
        <option value="White">White</option>
        <option value="None">None</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="eye" class="form-label">Eye Color</label>
      <select id="eye" required="true" name="eye" class="form-control">
        <option value="" disabled selected>Select Eye Color</option>
        <option value="Brown">Brown</option>
        <option value="Blue">Blue</option>
        <option value="Green">Green</option>
        <option value="Hazel">Hazel</option>
        <option value="Gray">Gray</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="race" class="form-label">Race</label>
      <select id="ethnicity" required="true" name="race" class="form-control">
        <option value="race" disabled selected>Select One</option>
        <option value="American Indian or Alaska Native">American Indian or Alaska Native</option>
        <option value="Asian">Asian</option>
        <option value="Black or African American">Black or African American</option>
        <option value="Hispanic or Latino">Hispanic or Latino</option>
        <option value="White">White</option>
      </select>
    </div>
    <div class="mx-auto row mb-3">
      <label class="form-label">Height</label>
      <div class="col"  style="padding-left: 0;"> 
        <input required="true" type="number" placeholder="feet" class="form-control" id="feet" name="feet">
      </div>
      <div class="col" style="padding-right: 0;">
        <input type="number" placeholder="inches" class="form-control" id="inches" name="inches">
      </div>
    </div>
    <div class="mb-3">
      <label for="weight" class="form-label">Weight (lbs)</label>
      <input required="true" type="number" class="form-control" id="weight" name="weight">
    </div>
    <div class="mb-3">
      <label for="weight" class="form-label">img</label>
      <input required="true" type="file" class="form-control" id="weight" name="img">
    </div>
    <div class="mb-3 row mx-auto">
      <label for="zip" class="form-label">Zipcode</label>
      <input required="true" maxlength="5" type="text" placeholder="ZIP" class="form-control" id="zip" name="zip">
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
</div>
<%- include('bottom') %>